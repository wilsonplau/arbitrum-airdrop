// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Claim {
  address             String  @id
  amountString        String
  amountNumber        BigInt
  hasClaimed          Boolean @default(false)
  claimedAmountString String  @default("0")
  claimedAmountNumber BigInt  @default(0)
  events              Event[]
}

model Event {
  id               String         @id // txHash + logIndex
  address          String
  topics           String[]
  eventHash        String // topics[0]
  data             String
  blockNumber      Int?
  transactionHash  String
  transactionIndex Int?
  blockHash        String
  logIndex         Int
  removed          Boolean
  description      Json // parsed event description
  isProcessed      Boolean        @default(false)
  tokenBalances    TokenBalance[]
  claims           Claim[]

  @@index([blockNumber, logIndex])
  @@index([eventHash])
  @@index([isProcessed])
}

model TokenBalance {
  address       String  @id
  token         String
  balanceString String // BigInt string
  balanceNumber BigInt // BigInt number
  events        Event[]

  @@index([balanceNumber])
}
