// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Claim {
  address      String @id
  amountString String
  amountNumber Float
}

model Event {
  id               String         @id // txHash + logIndex
  address          String
  topics           String[]
  eventHash        String // topics[0]
  data             String
  blockNumber      Int?
  transactionHash  String
  transactionIndex Int?
  blockHash        String
  logIndex         Int
  removed          Boolean
  description      Json // parsed event description
  tokenBalances    TokenBalance[]
}

model TokenBalance {
  address String  @id
  token   String
  balance String // BigInt string
  events  Event[]
}
